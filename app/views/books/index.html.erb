<div class="main">
	<section>
		<h2>Books</h2>
		<table>
			<tr class="table-row">
				<th class="table-headline">Title</th>
				<th class="table-headline">Body</th>
				<th colspan="3"></th>
			</tr>
			<% @books.each do |book| %>
			    <tr>
			    	<td class="table-data"><%= book.title %></td>
			    	<td class="table-data"><%= book.body %></td>
			    	<td><%= link_to "Show", book_path(book.id), class:"table-data underline" %></td>
			    	<td><%= link_to "Edit", edit_book_path(book), class:"table-data underline" %></td>
			    	<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm"=>"Are you sure?", class:"table-data underline" %></td>
			    </tr>
			<% end %>
		</table>
	</section>
	<section>
		<h2>New book</h2>
		<% if @book.errors.any? %>
		    <div id="error_explanation">
		        <p class="error_count"><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
		        <ul>
		        	<% @book.errors.full_messages.each do |message| %>
		        		 <li class="color-red">ãƒ»<%= message %></li>
		        	<% end %>
		        </ul>
		    </div>
		<% end %>
		<%= form_for(@book) do |f| %>
		    <div>
		    	<p><%= f.label :title, "Title", class:"color" %></p>
		        <%= f.text_field :title, class:"color" %>
		    </div>
		    <div>
		        <p><%= f.label :body, "Body", class:"color" %></p>
		        <%= f.text_area :body, class:"color" %>
		    </div>
		    <%= f.submit "Create Book", class:"color" %>
		<% end %>
	</section>
</div>