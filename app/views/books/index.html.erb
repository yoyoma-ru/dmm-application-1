
	<section>
		<h2>Books</h2>
		<table>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
			<% @books.each do |book| %>
			    <tr>
			    	<td><%= book.title %></td>
			    	<td><%= book.body %></td>
			    	<td><%= link_to "Show", book_path(book.id) %></td>
			    	<td><%= link_to "Edit", edit_book_path(book) %></td>
			    	<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm"=>"Are you sure?" %></td>
			    </tr>
			<% end %>
		</table>
	</section>
	<section>
		<h2>New book</h2>
		<%= form_for(@book) do |f| %>
		    <div class="">
		    	<p><%= f.label :title, "Title" %></p>
		        <%= f.text_field :title %>
		    </div>
		    <div class="">
		        <p><%= f.label :body, "Body" %></p>
		        <%= f.text_area :body %>
		    </div>
		    <%= f.submit "Create Book" %>
		<% end %>
	</section>
